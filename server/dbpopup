CREATE TABLE popup_config (
  id INT PRIMARY KEY AUTO_INCREMENT,
  title VARCHAR(255),
  content TEXT,
  image_url VARCHAR(255),
  link_url VARCHAR(255),
  position VARCHAR(50) DEFAULT 'center',
  is_active BOOLEAN DEFAULT 1
);

-- Tạo sẵn 1 dòng dữ liệu mặc định để tránh lỗi khi mới chạy
INSERT INTO popup_config (id, title, content, image_url, position, is_active) 
VALUES (1, 'Chào mừng bạn!', 'Nhận ngay ưu đãi khi mua cây hôm nay.', '', 'center', 1);